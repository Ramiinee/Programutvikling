                    <Tooltip text="Start" />
                </tooltip>
            </Button>
            <Button fx:id="Stop" mnemonicParsing="false" prefHeight="50.0" prefWidth="150.0" text="Stop/Clear" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" onAction="#stop">
                <tooltip>
                    <Tooltip text="Stop" />
                </tooltip>
            </Button>

        </GridPane>
    </bottom>
    <center>
        <Canvas fx:id="Canvas" height="400.0" width="500.0" BorderPane.alignment="CENTER" style="-fx-background-color: white;"/>
    </center>
</BorderPane>
